@model WebCV_Fiches.Models.CVViewModels.MandatViewModel

<div class="card border-dark mb-3 mandat-fiche">
    <div class="card-header lgs-backgroundColor"><h3> @Model.NumeroMandat - @Model.TitreMandat</h3></div>
    <div class="card-body text-dark">
        <div class="lgs-group">
            <div style="clear:both" class="form-inline">
                <label class="lgs-champLabel">Entreprise: </label><h3>@Model.NomEntreprise</h3>
            </div>

            <div class="lgs-section">
                <div class="form-inline">
                    <label class="lgs-champLabel">Mandat:</label> <b id="mandat">@Model.TitreMandat</b>
                </div>
                <div class="form-inline">
                    <label class="lgs-champLabel">Dès</label> <b>@Model.DebutMandat.ToShortDateString()</b> <label class="lgs-champLabel" style="margin-left:10px">à</label> <b>@Model.FinMandat.ToShortDateString()</b>
                    <span>( @(Math.Ceiling((Model.FinMandat - Model.DebutMandat).TotalDays / 30)) mois )</span>
                </div>
                <div class="form-inline">
                    <label class="lgs-champLabel">Envergure:</label><b>@Model.Envergure</b>
                </div>
                <div>
                    <label class="lgs-champLabel">Fonctions du conseiller sur le mandat:</label> 
                    <b>Analyste Devéloppeur</b>
                </div>

            </div>

            <div class="form-inline">
                <label class="lgs-champLabel">Effort du conseiller sur le projet ou sous-projet</label>

                <b>@Model.DebutProjet.ToShortDateString()</b> <label class="lgs-champLabel" style="margin-left:8px">à</label> <b>@Model.FinProjet.ToShortDateString()</b>
                <span style="margin-left:8px">( @(Math.Ceiling((Model.FinProjet - Model.DebutProjet).TotalDays / 30)) mois )</span>
            </div>

            <div class="card border-dark mb-3" style="margin-top:10px">
                <div class="card-header"><b>contexte du projet ou du sous projet</b> (provient de la fiche) NON MODIFIABLE</div>
                <div class="card-body">
                    @Model.ContexteProjet
                </div>
            </div>

            <div class="card border-dark mb-3 lgs-section">
                <div class="card-header"><b>Portée des travaux du conseiller sur le mandat</b></div>
                <div class="card-body">
                    @Model.PorteeDesTravaux
                </div>
            </div>

            <div style="clear:both">
                <div class="form-group row">
                    <div class="col-lg-4">

                        <div>
                            <div class="lgs-label">Description de tâches</div>
                            <div class="lgs-floatLeftButtons">
                                <button type="button" class="btn btn-link"></button>
                            </div>
                            <div class="lgs-group table-bordered">
                                <ul>
                                    <li>Codifier de nouvelles fonctionnalités</li>
                                    <li>Déployer l’environnement de production</li>
                                </ul>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4">

                        <div>
                            <div class="lgs-label">Liste des techno du projet</div>
                            <div class="lgs-floatLeftButtons">
                                <button type="button" class="btn btn-link"></button>
                            </div>
                            <div class="lgs-group table-bordered">
                                <ul>
                                    <li>C#</li>
                                    <li>ASP .NET MVC</li>
                                    <li>Angular</li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>
</div>