@model WebCV_Fiches.Models.CVViewModels.MandatViewModel

<div class="mandat-fiche">
    <div class="table-bordered img-rounded">
        <div class="lgs-backgroundColor lgs-textarea"><h3> @Model.NumeroMandat - @Model.TitreMandat</h3></div>
        <div class="lgs-group">
            <div style="clear:both" class="form-inline">
                <h2>@Model.NomEntreprise</h2>
            </div>

            <div class="form-inline">
                <div>Mandat: <h3>@Model.TitreMandat</h3></div>
                de <b>@Model.DebutMandat.ToShortDateString()</b> à <b>@Model.FinMandat.ToShortDateString()</b>
                <span>( @(Math.Ceiling((Model.FinMandat - Model.DebutMandat).TotalDays / 30)) mois )</span>
                <div>
                    Envergure: <b>@Model.Envergure</b>
                </div>
                <div>Fonctions du conseiller sur le mandat: <b>Analyste Devéloppeur</b></div>
            </div>

            <div class="form-inline">
                Effort du conseiller sur le projet ou sous-projet

                <b>@Model.DebutProjet.ToShortDateString()</b> à <b>@Model.FinProjet.ToShortDateString()</b>
                <span>( @(Math.Ceiling((Model.FinProjet - Model.DebutProjet).TotalDays / 30)) mois )</span>
            </div>

            <div class="panel panel-default" style="margin-top:10px">
                <div class="panel-heading"><b>contexte du projet ou du sous projet</b> (provient de la fiche) NON MODIFIABLE</div>
                <div class="panel-body">
                    @Model.ContexteProjet
                </div>
            </div>

            <div class="panel panel-default" style="margin-top:10px">
                <div class="panel-heading"><b>Portée des travaux du conseiller sur le mandat</b></div>
                <div class="panel-body">
                    @Model.PorteeDesTravaux
                </div>
            </div>

            <textarea asp-for="PorteeDesTravaux" class="lgs-textarea form-control" style="width:100%" placeholder="Portée des travaux du conseiller sur le mandat"></textarea>

            <div style="clear:both">
                <div class="form-group row">
                    <div class="col-lg-4">

                        <div>
                            <div class="lgs-label">Description de tâches</div>
                            <div class="lgs-floatLeftButtons">
                                <button type="button" class="btn btn-link"></button>
                            </div>
                            <div class="lgs-group table-bordered">
                                <ul>
                                    <li>Codifier de nouvelles fonctionnalités</li>
                                    <li>Déployer l’environnement de production</li>
                                </ul>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4">

                        <div>
                            <div class="lgs-label">Liste des techno du projet</div>
                            <div class="lgs-floatLeftButtons">
                                <button type="button" class="btn btn-link"></button>
                            </div>
                            <div class="lgs-group table-bordered">
                                <ul>
                                    <li>C#</li>
                                    <li>ASP .NET MVC</li>
                                    <li>Angular</li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>
</div>