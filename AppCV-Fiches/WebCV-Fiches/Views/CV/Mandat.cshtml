@model WebCV_Fiches.Models.CVViewModels.MandatViewModel

<div>
    <div class="table-bordered img-rounded">
        <div class="lgs-backgroundColor">@Model.NomEntreprise</div>
        <div class="lgs-group">
            <div style="clear:both" class="form-inline">
                <span class="lgsTextTitle">12</span>
                <input type="text" class="form-control" name="entreprise" asp-for="NomEntreprise" placeholder="Entreprise" />
            </div>

            <input type="text" class="form-control" name="projet" asp-for="TitreProjet" placeholder="Projet ou sous projet" />
            <div class="form-inline">
                <input type="text" class="form-control" name="TitreMandat" asp-for="TitreMandat" style="width:500px" placeholder="Titre du mandat" />
                <input type="text" class="form-control" name="DebutMandat" asp-for="DebutMandat" style="width:100px" placeholder="de" />
                <input type="text" class="form-control" name="FinMandat" asp-for="FinMandat" style="width:100px" placeholder="à" />
                <span>9 mois</span>
                <div>
                    <input type="text" class="form-control" name="envergure" asp-for="Envergure" style="width:90px" placeholder="Envergure" />
                    <select class="form-control form-control-sm">
                        <option>Fonctions du conseiller sur le mandat</option>
                    </select>
                </div>
            </div>

            <div class="form-inline">
                Effort du conseiller sur le projet ou sous-projet
                <input type="text" class="form-control" name="dateDebutMandatConseiller" asp-for="DebutProjet" style="width:100px" placeholder="de" />
                <input type="text" class="form-control" name="dateFinMandatConseiller" asp-for="FinProjet" style="width:100px" placeholder="à" />
                <span>X mois</span>
            </div>

            <div class="panel panel-default" style="margin-top:10px">
                <div class="panel-heading">contexte du projet ou du sous projet (provient de la fiche) NON MODIFIABLE</div>
                <div class="panel-body">
                    @Model.ContexteProjet
                </div>
            </div>

            <textarea asp-for="PorteeDesTravaux" class="lgs-textarea form-control" style="width:100%" placeholder="Portée des travaux du conseiller sur le mandat"></textarea>

            <div style="clear:both">
                <div class="form-group row">
                    <div class="col-lg-4">

                        <div>
                            <div class="lgs-label">Description de tâches</div>
                            <div class="lgs-floatLeftButtons">
                                <button type="button" class="btn btn-link"><i class="fas fa-plus"></i></button>
                            </div>
                            <div class="lgs-group table-bordered">
                                <ul>
                                    <li>Codifier de nouvelles fonctionnalités</li>
                                    <li>Déployer l’environnement de production</li>
                                </ul>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4">

                        <div>
                            <div class="lgs-label">Liste des techno du projet</div>
                            <div class="lgs-floatLeftButtons">
                                <button type="button" class="btn btn-link"><i class="fas fa-plus"></i></button>
                            </div>
                            <div class="lgs-group table-bordered">
                                <ul>
                                    <li>C#</li>
                                    <li>ASP .NET MVC</li>
                                    <li>Angular</li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>
</div>