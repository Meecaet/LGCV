@using DAL_CV_Fiches.Models.Graph
@model int    

    <div class="table-bordered img-rounded">
        <div>
            <label>Client: </label>
            <input class="MandatItem" name="Mandats[@(Model)].NomClient" type="text" />
        </div>
        <div class="lgs-group">
            <div style="clear:both" class="form-inline">
                <span class="lgsTextTitle">@Model</span>
                <input name="Mandats[@(Model)].NomEntreprise" type="text" class="form-control" placeholder="Entreprise" />
            </div>

            <input type="text" class="form-control" name="Mandats[@(Model)].TitreProjet" placeholder="Projet ou sous projet" />
            <div class="form-inline">
                <input type="text" class="form-control" name="Mandats[@(Model)].TitreMandat" style="width:500px" placeholder="Titre du mandat" />
                <input type="text" class="form-control" name="Mandats[@(Model)].DebutMandat" style="width:100px" placeholder="de" />
                <input type="text" class="form-control" name="Mandats[@(Model)].FinMandat" style="width:100px" placeholder="à" />
                <div>
                    <input type="text" class="form-control" name="Mandats[@(Model)].Envergure" style="width:90px" placeholder="Envergure" />
                    <select name="Mandats[@(Model)].GraphIdFonction" class="form-control form-control-sm">
                        @foreach (Fonction fonction in (List<Fonction>)ViewData["Fonctions"])
                        {
                            <option id="@fonction.GraphKey">@fonction.Description</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-inline">
                Effort du conseiller sur le projet ou sous-projet
                <input type="text" class="form-control" name="Mandats[@(Model)].Efforts" style="width:100px" />
                <span>9 mois</span>
            </div>

            <div class="panel panel-default" style="margin-top:10px">
                <div class="panel-heading">contexte du projet ou du sous projet</div>
                <div class="panel-body">
                    <textarea class="lgs-textarea form-control" style="width:100%" name="Mandats[@(Model)].ContexteProjet" style="width:100px" />
                </div>
            </div>

            <textarea class="lgs-textarea form-control" style="width:100%" name="Mandats[@(Model)].PorteeDesTravaux" placeholder="Portée des travaux du conseiller sur le mandat"></textarea>


            <div style="clear:both">
                <div class="form-group row">
                    <div class="col-lg-4">

                        <div>
                            <div class="lgs-label">Description de tâches</div>
                            <div class="lgs-floatLeftButtons">
                                <button type="button" id="btnAddTask[@(Model)]" class="btnAddTask btn btn-link" index = "@(Model)"><i class="fas fa-plus"></i></button>
                            </div>
                            <div id="tableTache[@(Model)]" class="tableTache lgs-group table-bordered">
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4">

                        <div>
                            <div class="lgs-label">Liste des techno du projet</div>
                            <div class="lgs-floatLeftButtons">
                                <button type="button" class="btnAddTech btn btn-link" index = "@(Model)"><i class="fas fa-plus"></i></button>
                            </div>
                            <div id="tableTechnologie[@(Model)]" class="tableTechnologie lgs-group table-bordered">
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>
<br/>